{{#each}}
  {{render 'pane' this}}
{{/each}}

<div class="edit-surface">
  <a class="edit" {{action 'edit'}} href="#">
    <i class="fa fa-cog"></i>
  </a>
</div>

{{outlet}}

<div class="edit-actions">
  <button class="add" {{action 'addPane'}}>
    <i class="fa fa-plus-square"></i>
  </button>
  <button class="close" {{action 'close'}}>
    <i class="fa fa-times"></i>
  </button>
</div>

<div class="undo clearfix">
  <button class="action" {{action 'undo'}}>Undo Delete</button>
  <a {{action 'dismissUndo'}} href="#">Dismiss</a>
</div>
