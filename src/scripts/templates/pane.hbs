<div class="pane" {{bind-attr style=style}}>
  <iframe {{bind-attr src=url}} frameborder="0" marginheight="0" marginwidth="0" scrolling="no"></iframe>
  <a class="edit-cover" {{action 'edit'}} href="#">
    <i class="fa fa-edit"></i>
  </a>
</div>

<div class="edit-pane-container">
  <div class="edit-pane">
    <fieldset class="url">
      <label>URL</label>
      {{input value=url}}
    </fieldset>
    <fieldset class="properties">
      <label>Properties</label>
      <ul>
        {{#each properties}}
          <li>
            {{input class="property-name" value=name}}
            {{input class="property-value" value=value}}
            {{input class="property-units" value=units}}
          </li>
        {{/each}}
      </ul>
    </fieldset>
    <section class="actions clearfix">
      <button class="save action" {{action 'save'}}>Save</button>
      <button class="cancel neutral" {{action 'cancel'}}>Cancel</button>
    </section>
  </div>
</div>
