.pane {
  position: absolute;

  iframe {
    position: absolute;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .being-edited & {
    opacity: 0.6;
    z-index: 9;
  }
}

rotate-left() {
  -webkit-transform: rotate(10deg);
  transform: rotate(10deg);
}
rotate-right() {
  -webkit-transform: rotate(-10deg);
  transform: rotate(-10deg);
}
rotate-zero() {
  -webkit-transform: rotate(0deg);
  transform: rotate(0deg);
}

@-webkit-keyframes jiggle {
  14% {
    rotate-zero();
  }
  16% {
    rotate-left();
  }
  18% {
    rotate-right();
  }
  20% {
    rotate-left();
  }
  22% {
    rotate-right();
  }
  24% {
    rotate-left();
  }
  26% {
    rotate-right();
  }
  28% {
    rotate-zero();
  }
}

.edit-options {
  border: solid 1px #000;
  box-sizing: border-box;
  display: none;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;

  .editing & {
    display: block;
  }

  .editing-pane &,
  .being-swapped &,
  .editing-settings & {
    background-color: rgba(0, 0, 0, 0.6);
  }

  .being-edited &,
  .swapping & {
    background-color: rgba(255, 255, 255, 0.7);
    border-color: #FFF;
  }
}

.edit-option {
  background-color: rgba(0, 0, 0, 0.6);
  color: rgba(255, 255, 255, 0.6);
  cursor: pointer;
  position: absolute;
  transition: all 0.5s ease-out;

  &:hover,
  &:focus {
    background-color: rgba(255, 255, 255, 0.5);
    color: rgba(0, 0, 0, 0.8);
  }

  .editing-pane &,
  .editing-settings & {
    display: none;
  }
}

.edit-pane {
  font-size: 4em;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;

  i {
    display: block;
    margin-top: -25px;
    margin-left: -25px;
    position: absolute;
    top: 50%;
    left: 50%;
    text-align: center;
    width: 50px;
    height: 50px;
    line-height: 50px;
  }

  &:hover,
  &:focus {
    i {
      -webkit-animation: jiggle 5s infinite;
      animation: jiggle 5s infinite;
    }
  }

  .swapping &,
  .editing-settings & {
    display: none;
  }
}

.swap-url {
  border-radius: 10px;
  box-sizing: border-box;
  font-size: 1.2em;
  text-align: center;
  margin-left: -60px;
  padding: 10px;
  bottom: 15px;
  left: 50%;
  transition: all 0.25s ease-in-out;
  width: 120px;

  i {
    display: inline-block;
    height: 20px;
    line-height: 20px;

    &.fa-arrows-h {
      margin: 0 5px;
    }
  }

  .swapping & {
    margin-bottom: -20px;
    bottom: 50%;

    &:hover,
    &:focus {
      background-color: rgba(0, 0, 0, 0.9);
      color: rgba(255, 255, 255, 0.6);
    }
  }

  .being-swapped & {
    display: none;
  }
}

.pane-id {
  callout();
  center-align();
  background: rgba(0, 0, 0, 0.7);
  border: solid 1px #555;
  box-sizing: border-box;
  color: #FFF;
  display: none;
  font-size: 3em;
  text-align: center;

  .showing-pane-ids & {
    display: flex;
  }
}
